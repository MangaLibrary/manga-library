{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "target": "ES2015",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["**/*.spec.ts"],
  "include": ["**/*.ts"]
}
